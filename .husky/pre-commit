#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running lint..."
npm run lint || exit 1

echo "ğŸ§ª Running tests with coverage..."
npm run test -- --coverage || exit 1

COVERAGE=$(node -pe "require('./coverage/coverage-summary.json').total.statements.pct")
REQUIRED=80

if [ "$(echo "$COVERAGE < $REQUIRED" | bc)" -eq 1 ]; then
  echo "âŒ Coverage too low: ${COVERAGE}% (required: ${REQUIRED}%)"
  exit 1
else
  echo "âœ… Coverage check passed: ${COVERAGE}%"
fi